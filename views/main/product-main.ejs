<% layout('layout') %>


<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1 class="text-center"> Find your favorite Products </h1>
    <p class="text-center">Search through our Product Catalog</p>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <input type="text" id="search" class="form-control input-lg" name="search_term" placeholder="Search for a Product...">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-lg"><li class="glyphicon glyphicon-search"></li></button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row" id="searchResults">
    <% for (var i = 0; i < products.length; i++) { %>
    <div class="col-md-4">
      <a href="/product/<%= products[i]._id  %>">
        <div class="thumbnail">
          <img src="<%= products[i].image %>">
          <div class="caption">
            <h3><%= products[i].name %></h3>
            <p><%= products[i].category.name %></p>
            <p>$<%= products[i].price %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>

    <ul class="pagination text-center">
      <li>
        <% for(var i = 0; i < pages; i++)  { %>
          <% if (i === 1) { %>
            <li><a href="/"><%= i %> </a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %> </a></li>
          <% } %>
        <% } %>
      </li>
    </div>
  </div>
</div>
